# Acceder terminal SSH
super + shift + {F, Return}
	$TERMINAL {-t scratchpad, } -e ssh "$(cat /opt/Sync/Arch\ IP)"
# Abrir aplicaciones usadas frequentemente
super + {F2,F3,F4}
	{$BROWSER,$TERMINAL -e lf ~, tauon}
# Desactivar/Activar PageUp/Down
super + shift + t
	~/.local/scripts/typemode

# Desmontar discos montados en el sistema
super + shift + F5
	~/.local/scripts/sxhkd/dmenuumount

# Configurar pantallas
super + F1
	~/.local/scripts/sxhkd/monitor-layout
super + shift + F1
	arandr

# Menu de apagado
super + F11
	~/.local/scripts/sxhkd/powermenu

# Cambiar canci칩n
super + x
	playerctl play-pause
super + {z,c}
	playerctl {previous,next} && kill -USR2 $(pgrep dwmblocks | head -n1)

# Capturas de pantalla al portapapeles
super + p
	import -window root jpg:- | xclip -selection clipboard -t image/png; notify-send 'Captura copiada al Portapapeles'
super + shift + p
	import png:- | xclip -selection clipboard -t image/png; notify-send 'Captura copiada al Portapapeles'
# Guardar capturas de pantallas en ~/Pictures/Screenshots
super + alt + p
	cd $HOME/Pictures/Screenshots/; import -window root $(date +'%Y_%m_%d-%H_%M_%S').jpg; notify-send 'Captura guardada en ~/Im치genes'
super + alt + shift + p
	cd $HOME/Pictures/Screenshots/; import $(date +'%Y_%m_%d-%H_%M_%S').jpg; notify-send 'Captura guardada en ~/Im치genes'

# Abrir/Cerrar barra de tareas
super + t
	pkill trayer ||	trayer --align center --edge top --expand false --width 8 --height 20 --distance 34 --iconspacing 6

# Subir bajar volumen
super + {m,n}
	sndioctl output.level={+,-}0.025 && kill -USR1 $(pgrep dwmblocks | head -n1)
# Volumen al 100%/50%
super + shift + {n,m}
	doas /usr/bin/mixerctl outputs.master=255 && sndioctl output.level={1,0.75} && kill -USR1 $(pgrep dwmblocks | head -n1)
# Desactivar o activar el micr칩fono
super + shift + F4
	~/.local/scripts/mic-mute-toggle

# Cambiar el brillo
super + {v,b}
	xbacklight -steps 1 -{dec,inc} 25
super + shift + {v,b}
	xbacklight -steps 1 -set {100,40}

# Close window
super + shift + {c,k}
	xkill
