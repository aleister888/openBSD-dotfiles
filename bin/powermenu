#!/usr/local/bin/bash

options=(
	" Lock"
	"⏼ Suspend"
	" Logout"
	" Restart dwm"
	" Shutdown"
	" Reboot"
)

chosen=$(printf "%s\n" "${options[@]}" | dmenu -l ${#options[@]} -p "")

case $chosen in
	"${options[0]}") i3lock-fancy ;;
	"${options[1]}") zzz ;;
	"${options[2]}") pkill xinit ;;
	"${options[3]}") pkill dwm ;;
	"${options[4]}") xterm -title scratchpad -e "doas halt -p" ;;
	"${options[5]}") xterm -title scratchpad -e "doas reboot" ;;
esac
